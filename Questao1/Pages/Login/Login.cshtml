@page "/Login"
@model AT.Pages.Login.LoginModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="mb-4 text-center">Login</h1>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Email">Email</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Coloque seu email" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Senha">Senha</label>
                    <input type="password" asp-for="Senha" class="form-control" placeholder="Coloque sua senha" />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
                    
                <p class="text-danger mt-3">@Model.Mensagem</p>

            </form>
        </div>
    </div>
</div>
