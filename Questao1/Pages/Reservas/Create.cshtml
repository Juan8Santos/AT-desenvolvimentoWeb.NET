@page
@model AT.Pages.Reservas.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reserva.ClienteId" class="control-label">Cliente</label>
                <select asp-for="Reserva.ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Reserva.PacoteTuristicoId" class="control-label">Pacote Turístico</label>
                <select asp-for="Reserva.PacoteTuristicoId" class ="form-control" asp-items="ViewBag.PacoteTuristicoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Reserva.DataFinal" class="control-label"></label>
                <input asp-for="Reserva.DataFinal" class="form-control" />
                <span asp-validation-for="Reserva.DataFinal" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" asp-page-handler="Post" value="Create" class="btn btn-primary" />
                <input type="submit" asp-page-handler="Calcular" value="Calcular Valor" class="btn btn-success" />
            </div>
            <br />
            <p class="text-success">@Model.Mensagem</p> 
            <p class="text-danger mt-3">@Model.MensagemErro</p>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
