@page
@model AT.Pages.Pacotes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PacotesTuristicos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PacotesTuristicos.Titulo" class="control-label"></label>
                <input asp-for="PacotesTuristicos.Titulo" class="form-control" />
                <span asp-validation-for="PacotesTuristicos.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PacotesTuristicos.DataInicio" class="control-label"></label>
                <input asp-for="PacotesTuristicos.DataInicio" class="form-control" />
                <span asp-validation-for="PacotesTuristicos.DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PacotesTuristicos.CapacidadeMaxima" class="control-label"></label>
                <input asp-for="PacotesTuristicos.CapacidadeMaxima" class="form-control" />
                <span asp-validation-for="PacotesTuristicos.CapacidadeMaxima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PacotesTuristicos.PrecoDiaria" class="control-label"></label>
                <input asp-for="PacotesTuristicos.PrecoDiaria" class="form-control" />
                <span asp-validation-for="PacotesTuristicos.PrecoDiaria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Cidades do Pacote</label>
                <div>
                    @foreach (var cidade in Model.TodasCidades)
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="CidadesSelecionadas"
                                   value="@cidade.Value"
                                   id="cidade@cidade.Value" />
                            <label class="form-check-label" for="cidade@cidade.Value">
                                @cidade.Text
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
