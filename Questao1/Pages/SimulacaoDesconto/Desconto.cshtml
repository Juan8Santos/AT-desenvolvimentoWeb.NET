@page "/simulacao"
@model AT.Pages.Simulacao.DescontoModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1 class="mb-4 text-center">Simulação de Desconto</h1>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="ValorInformado">Valor</label>
                    <input type="number" asp-for="ValorInformado" class="form-control" placeholder="Digite um valor" />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Simular</button>
                </div>   
                <br />
                <p class="text-success">@Model.Mensagem</p>
            </form>
        </div>
    </div>
</div>
